<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/foto"
    android:layout_height="match_parent"
    tools:context=".board.VideoBoardFragment">

    <ImageView
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_vector_photo"
        android:id="@+id/photoPlatform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/skipCurrentMaterial"
        android:backgroundTint="@color/gray"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_50sdp"
        style="@style/card_item"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="150dp"
        android:layout_height="40dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/skipContainer"
            android:layout_width="match_parent"
            android:layout_height="28dp">
        <TextView
            android:id="@+id/skipText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/skip_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/skipImage"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/ic_vector"
                app:layout_constraintBottom_toBottomOf="@+id/skipText"
                app:layout_constraintStart_toEndOf="@+id/skipText"
                app:layout_constraintTop_toTopOf="@+id/skipText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/skipImageII"
                app:srcCompat="@drawable/ic_vector"
                app:layout_constraintBottom_toBottomOf="@+id/skipImage"
                app:layout_constraintStart_toEndOf="@+id/skipImage"
                app:layout_constraintTop_toTopOf="@+id/skipImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        app:layout_constraintTop_toBottomOf="@+id/skipCurrentMaterial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:indicatorColor="@color/gray"
        app:trackColor="@color/white"
        app:trackThickness="6dp"
        android:id="@+id/progressLoader"
        android:max="100"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:progress="100"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>